<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Material.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="sty_navigationbar_items">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/color_navigationbar_text</item>
    </style>

    <!-- 一条高度为1dp的分割线 -->
    <style name="sty_horizontal_line">
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/gray_c8c7cc</item>
    </style>

    <style name="Base.App.Theme.NoTitle" parent="App.Theme.Light">

        <!--color primary-->
        <item name="colorPrimary">@color/jiawa_main</item>
        <item name="colorPrimaryDark">@color/jiawa_main</item>
        <item name="colorAccent">@color/jiawa_main</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <!-- MainActivity的主题样式 -->
    <style name="App.Theme.Main" parent="Base.App.Theme.NoTitle" />
</resources>
