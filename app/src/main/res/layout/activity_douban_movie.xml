<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="9dp"
    android:paddingRight="9dp"
    android:orientation="vertical"
    android:background="@color/white">
    <!-- 顶部的基本信息栏 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
        <!-- 左侧的片名，上映日期，类型 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:textStyle="bold"
                android:textSize="26sp"
                />
            <TextView
                android:id="@+id/tv_year_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:textSize="12dp"/>
            <TextView
                android:id="@+id/tv_pub_dates"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textSize="12dp"/>
            <TextView
                android:id="@+id/tv_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textSize="12dp"/>
        </LinearLayout>
        <!-- 右边的分数和星星还有点赞人数 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@color/amber_50"
            android:orientation="vertical"
            android:gravity="center">
            <!-- 分数 -->
            <TextView
                android:id="@+id/tv_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="26sp"
                android:textStyle="bold"
                android:gravity="center"/>
            <net.jiawa.jobhunter.widgets.MovieStarView
                android:id="@+id/ms_stars"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                app:MovieStars="25"
                />
            <TextView
                android:id="@+id/tv_people_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>
    <!-- 分割线 -->
    <View
        style="@style/sty_horizontal_line"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">
    </View>
    <!-- 简介 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:text="简介"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="4"
                android:ellipsize="end"
                android:textColor="@android:color/black"/>
            <TextView
                android:text="展开"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:background="@android:color/white"/>
        </RelativeLayout>
    </LinearLayout>
    <!-- 分割线 -->
    <View
        style="@style/sty_horizontal_line"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">
    </View>
    <!-- 影人 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:text="影人"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_casts"
            android:layout_width="match_parent"
            android:layout_height="120dp">

        </android.support.v7.widget.RecyclerView>
    </LinearLayout>
    <!-- 分割线 -->
    <View
        style="@style/sty_horizontal_line"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">
    </View>

    <!-- 底部用于占位置的View -->
    <View
        android:layout_width="wrap_content"
        android:layout_height="1800dp">
    </View>
</LinearLayout>