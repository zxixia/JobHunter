<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="9dp"
    android:paddingRight="9dp">

    <!-- 顶部的基本信息栏 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <!-- 左侧的片名，上映日期，类型 -->
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:textSize="26sp"
                android:textStyle="bold"
                android:layout_alignParentTop="true"/>

            <TextView
                android:id="@+id/tv_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textSize="12dp"
                android:layout_alignParentBottom="true"/>

            <TextView
                android:id="@+id/tv_pub_dates"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textSize="12dp"
                android:layout_above="@id/tv_duration"/>

            <TextView
                android:id="@+id/tv_year_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:textSize="12dp"
                android:layout_above="@id/tv_pub_dates"/>
        </RelativeLayout>
        <!-- 右边的分数和星星还有点赞人数 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@color/amber_50"
            android:gravity="center"
            android:orientation="vertical">
            <!-- 分数 -->
            <TextView
                android:id="@+id/tv_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="26sp"
                android:textStyle="bold" />

            <net.jiawa.jobhunter.widgets.MovieStarView
                android:id="@+id/ms_stars"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                app:MovieStars="25" />

            <TextView
                android:id="@+id/tv_people_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center" />
        </LinearLayout>
    </LinearLayout>
    <!-- 分割线 -->
    <View
        style="@style/sty_horizontal_line"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"></View>


    <!-- 简介 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginBottom="3dp"
            android:text="简介" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="4"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:background="@android:color/white"
                android:text="展开" />
        </RelativeLayout>
    </LinearLayout>

    <!-- 分割线 -->
    <View
        style="@style/sty_horizontal_line"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"></View>

    <!-- 影人 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginBottom="3dp"
            android:text="影人" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_casts"
            android:layout_width="match_parent"
            android:layout_height="95dp">

        </android.support.v7.widget.RecyclerView>
    </LinearLayout>

    <!-- 分割线 -->
    <View
        style="@style/sty_horizontal_line"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"></View>

    <!-- 评论 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginBottom="3dp"
            android:text="评论" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_popular_comments"
            android:layout_width="match_parent"
            android:layout_height="180dp"></android.support.v7.widget.RecyclerView>
    </LinearLayout>
    <!-- 分割线 -->
    <View
        style="@style/sty_horizontal_line"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"></View>
</LinearLayout>